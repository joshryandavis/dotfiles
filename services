#!/bin/bash

# Get a list of all enabled services
enabled_services=$(systemctl list-units --type=service --state=enabled --no-pager | awk '{print $1}')

# Loop through each enabled service and check if its preset is also "enabled"
for service in $enabled_services; do
  preset_state=$(systemctl show -p LoadState --value "$service")
  if [ "$preset_state" == "enabled" ]; then
    echo "Service '$service' is currently enabled and preset to enabled."
  fi
done
